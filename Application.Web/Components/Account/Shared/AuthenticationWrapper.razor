<div class="bg-gradient-to-br from-slate-900 to-slate-950 text-white flex flex-col justify-center items-center py-4 lg:py-16 px-4 min-h-screen w-screen">
    <div class="container container-small mx-auto flex flex-col justify-center mb-8">
        <div class="mb-12">
            <h1 class="uppercase text-4xl font-black mb-4 text-center">@Title</h1>

            <div class="text-center font-thin">@Subtitle</div>
        </div>

        <div class="rounded-2xl shadow-2xl from-gray-600/30 to-gray-950/50 bg-gradient-to-br backdrop-blur-xl border border-neutral-700 px-8 py-8 lg:px-12 lg:py-10">
            @ChildContent
        </div>
    </div>

    <a href="/" class="block rounded-full bg-gray-400/30 hover:bg-gray-400/40 transition-default px-6 py-2 border border-gray-300/30 font-semibold text-gray-200">Back to Home</a>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public RenderFragment? Subtitle { get; set; }
}
